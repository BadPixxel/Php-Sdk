{
    "name":                 "badpixxel/php-sdk",
    "description":          "Development Kit for Php Packages",
    "type":                 "package",
    "prefer-stable":        true,
    "license":              "MIT",
    "minimum-stability":    "stable",

    "authors": [
        {
          "name":"Splash Sync",
          "email":"contact@splashsync.com"
        },
        {
          "name": "BadPixxel",
          "email": "eshop.bpaquier@gmail.com"
        }
    ],

    "autoload": {
        "psr-4": {
          "BadPixxel\\PhpSdk\\": "./src"
        }
    },

    "require": {
        "php":                                  "^8.1",

        "phpunit/phpunit":                      "^9.0|^10.0|^11.0",
        "phpro/grumphp-shim":                   "^2.0",
        "composer/composer":                    "^2.0",

        "php-parallel-lint/php-parallel-lint":  "^1.0",
        "j13k/yaml-lint":                       "^1.1",
        "seld/jsonlint":                        "^1.7",
        "friendsoftwig/twigcs":                 "^4.0|^5.0|^6.0",

        "phpmd/phpmd":                          "^2.6",
        "johnatas-x/phpcpd":                    ">6.0",
        "squizlabs/php_codesniffer":            "^3.2",
        "friendsofphp/php-cs-fixer":            ">2.10",

        "phpstan/phpstan":                      "^2.0",
        "phpstan/phpstan-phpunit":              "^2.0",
        "phpstan/phpstan-doctrine":             "^2.0",
        "phpstan/phpstan-symfony":              "^2.0",
        "phpstan/phpstan-strict-rules":         "^2.0"
    },
    "require-dev": {
        "phpro/grumphp":                        "^2.0"
    },

    "archive": {
        "exclude": ["/docs"]
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp":      false,
            "phpro/grumphp-shim": true
        }
    }
}

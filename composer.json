{
  "name":                 "badpixxel/php-sdk",
  "description":          "Development Kit for Php Packages",
  "type":                 "package",
  "prefer-stable":        true,
  "license":              "MIT",
  "minimum-stability":    "stable",

  "authors": [
    {
      "name":"Splash Sync",
      "email":"contact@splashsync.com"
    },
    {
      "name": "BadPixxel",
      "email": "eshop.bpaquier@gmail.com"
    }
  ],

  "autoload": {
      "psr-4": {
          "BadPixxel\\PhpSdk\\": "./src"
      },
      "files": [
          "grumphp/src/Configuration/GrumPHPExtension.php"
      ],
      "exclude-from-classmap": [
          "/tests/"
      ]
  },

  "require": {
      "php":                                  "^7.2|^8.0",

      "phpunit/phpunit":                      "~7.0|~8.0|~9.0",
      "phpro/grumphp":                        "^0.19|^1.0",
      "composer/composer":                    "^1.0|^2.0",

      "php-parallel-lint/php-parallel-lint":  "^1.0",
      "sclable/xml-lint":                     "~0.3",
      "j13k/yaml-lint":                       "^1.1",
      "seld/jsonlint":                        "^1.7",
      "friendsoftwig/twigcs":                 "^4.0|^5.0",

      "phpmd/phpmd":                          "^2.6",
      "sebastian/phpcpd":                     ">3.0",
      "squizlabs/php_codesniffer":            "^3.2",
      "friendsofphp/php-cs-fixer":            ">2.10",

      "phpstan/phpstan":                      "^1.0",
      "phpstan/phpstan-phpunit":              "^1.0",
      "phpstan/phpstan-doctrine":             "^1.0",
      "phpstan/phpstan-symfony":              "^1.0",
      "phpstan/phpstan-strict-rules":         "^1.0"
  },

  "archive": {
      "exclude": ["/docs"]
  },
  "config": {
      "allow-plugins": {
          "phpro/grumphp": true
      }
  }
}
